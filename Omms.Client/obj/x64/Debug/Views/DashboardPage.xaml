<Page x:ConnectionId='1'
    x:Class="Omms.Client.Views.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:labs="using:CommunityToolkit.Labs.WinUI"
    xmlns:local="using:Omms.Client.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Background="Transparent"
                                  
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <TextBlock
            Margin="35,0,35,15"
            FontSize="28"
            FontWeight="Bold"
            Text="Dashboard" />
        <ScrollViewer Grid.Row="1" Padding="35,0,35,15">
            <StackPanel x:ConnectionId='2' x:Name="stackPanel" Spacing="10">
                <Grid x:ConnectionId='3' x:Name="grid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" MinWidth="430.4" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Spacing="7.5">
                        <Button
                            Padding="0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            HorizontalContentAlignment="Stretch"
                            VerticalContentAlignment="Stretch"
                            BorderThickness="1"
                            CornerRadius="4">
                            <Grid Padding="15,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="40" />
                                    <RowDefinition Height="1*" />
                                </Grid.RowDefinitions>
                                <Grid>
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontWeight="SemiBold"
                                        Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                        Text="localhost" />
                                </Grid>
                                <TextBlock
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    FontWeight="SemiBold"
                                    Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}">
                                    <Run Text="Load average:" />
                                    <Run Text="-1" />
                                </TextBlock>
                                <Grid Grid.Row="1" Padding="15,5,15,20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="1*" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Orientation="Horizontal">
                                        <Grid HorizontalAlignment="Center">
                                            <muxc:ProgressRing
                                                Width="48"
                                                Height="48"
                                                Background="{ThemeResource ProgressBarBackground}"
                                                IsIndeterminate="False"
                                                Maximum="1" />
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontSize="12"
                                                Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}" />
                                        </Grid>
                                        <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                                            <TextBlock
                                                HorizontalAlignment="Left"
                                                FontWeight="SemiBold"
                                                Text="Memory" />
                                            <TextBlock
                                                HorizontalAlignment="Left"
                                                FontSize="12"
                                                FontWeight="SemiBold">
                                                <Run />
                                                <Run Text="/" />
                                                <Run />
                                            </TextBlock>
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel
                                        Grid.Column="1"
                                        HorizontalAlignment="Left"
                                        Orientation="Horizontal">
                                        <Grid HorizontalAlignment="Center">
                                            <muxc:ProgressRing
                                                Width="48"
                                                Height="48"
                                                Background="{ThemeResource ProgressBarBackground}"
                                                IsIndeterminate="False"
                                                Maximum="1" />
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontSize="12"
                                                Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}" />
                                        </Grid>
                                        <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                                            <TextBlock
                                                HorizontalAlignment="Left"
                                                FontWeight="SemiBold"
                                                Text="Swap" />
                                            <TextBlock
                                                HorizontalAlignment="Left"
                                                FontSize="12"
                                                FontWeight="SemiBold">
                                                <Run />
                                                <Run Text="/" />
                                                <Run />
                                            </TextBlock>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Button>
                        <ListView>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    <Setter Property="BorderBrush" Value="Transparent" />
                                    <Setter Property="BorderThickness" Value="0" />
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="Margin" Value="0,7.5" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListViewItem">
                                                <Grid>
                                                    <Border
                                                        Height="{TemplateBinding Height}"
                                                        Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="5">
                                                        <ContentPresenter
                                                            Height="{TemplateBinding Height}"
                                                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                                                    </Border>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Button
                                        Padding="0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        HorizontalContentAlignment="Stretch"
                                        VerticalContentAlignment="Stretch"
                                        BorderThickness="1"
                                        CornerRadius="4">
                                        <Grid Padding="15,0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="1*" />
                                            </Grid.RowDefinitions>
                                            <Grid Padding="0,10">
                                                <TextBlock
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    FontWeight="SemiBold"
                                                    Text="{Binding MountPoint}" />
                                                <TextBlock
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Center"
                                                    FontWeight="SemiBold"
                                                    Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                                    Text="{Binding FileSystem}" />
                                            </Grid>
                                            <StackPanel Grid.Row="1" Padding="0,0,0,10">
                                                <ProgressBar
                                                    CornerRadius="1"
                                                    Maximum="{Binding Total}"
                                                    Value="{Binding Free}" />
                                                <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                                                    <TextBlock
                                                        FontSize="12"
                                                        FontWeight="SemiBold"
                                                        Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}">
                                                        <Run Text="{Binding Total}" />
                                                        <Run Text="Total ," />
                                                        <Run Text="{Binding Used}" />
                                                        <Run Text="Used ," />
                                                        <Run Text="{Binding Free}" />
                                                        <Run Text="Free" />
                                                    </TextBlock>
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>
                                    </Button>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <x:String>A</x:String>
                            <x:String>A</x:String>
                        </ListView>
                    </StackPanel>

                    <Grid x:ConnectionId='4'
                        x:Name="RightGrid"
                        Grid.Column="1"
                        MinWidth="300">
                        <StackPanel>
                            <Grid>
                                <TextBlock
                                    Margin="1,0,0,4"
                                    VerticalAlignment="Center"
                                    FontSize="18"
                                    Style="{StaticResource BodyStrongTextBlockStyle}"
                                    Text="Shortcuts" />
                                <Button
                                    Margin="5"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Background="Transparent"
                                    BorderBrush="Transparent">
                                    <StackPanel Orientation="Horizontal" Spacing="5">
                                        <FontIcon FontSize="14" Glyph="&#xe710;" />
                                        <TextBlock Text="Add" />
                                    </StackPanel>
                                </Button>
                            </Grid>
                            <ListView HorizontalAlignment="Left">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                        <Setter Property="BorderBrush" Value="Transparent" />
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="Margin" Value="0,2.5" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListViewItem">
                                                    <Grid>
                                                        <Border
                                                            Height="{TemplateBinding Height}"
                                                            Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="5">
                                                            <ContentPresenter
                                                                Height="{TemplateBinding Height}"
                                                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                                                        </Border>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <labs:SettingsCard
                                            MaxWidth="430.4"
                                            Description="A SettingsCard can be made clickable and you can leverage the Command property or Click event."
                                            Header="A clickable SettingsCard"
                                            IsClickEnabled="True">
                                            <labs:SettingsCard.HeaderIcon>
                                                <FontIcon Glyph="&#xe724;" />
                                            </labs:SettingsCard.HeaderIcon>
                                        </labs:SettingsCard>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                                <x:String>A</x:String>
                                <x:String>A</x:String>
                            </ListView>

                        </StackPanel>
                    </Grid>

                </Grid>
            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>

